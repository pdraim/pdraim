		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0",
		"vite": "^6.1.0",
		"vitest": "^3.0.5"
	},
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.39.3",
		"uuid": "^11.0.5",
		"xp.css": "^0.2.6"
	}
